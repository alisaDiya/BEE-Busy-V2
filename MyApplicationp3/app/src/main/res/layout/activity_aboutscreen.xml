<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    tools:context=".aboutscreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="218dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/alisa" />

    <TextView
        android:id="@+id/TVsolgan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lets_buzz_into_productivity_with_beebusy_timer"
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.24" />

    <TextView
        android:id="@+id/TVabout1"
        android:layout_width="397dp"
        android:layout_height="304dp"
        android:layout_marginBottom="172dp"
        android:text="BeeBusy Timer is a productivity app designed to combat procrastination. It features a countdown timer to track task durations, rewarding users with virtual flowers upon completion. These flowers are stored in a virtual bee garden, serving as motivation. Users can set study goals, earning additional flowers upon achievement. The app also includes a shortcut for quick access to daily tasks, promoting efficiency. Embrace productivity one task at a time with BeeBusy Timer!"
        android:textAlignment="center"
        android:textColor="@color/teal"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVsolgan1"
        app:layout_constraintVertical_bias="0.165" />

    <Button
        android:id="@+id/btnlgs"
        android:layout_width="272dp"
        android:layout_height="66dp"
        android:text="Lets get started "
        android:textSize="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVabout1"
        app:layout_constraintVertical_bias="0.346" />
</androidx.constraintlayout.widget.ConstraintLayout>